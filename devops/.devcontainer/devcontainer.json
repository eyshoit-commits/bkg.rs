{
  "name": "bkg.rs core",
  "dockerFile": "../docker/Dockerfile",
  "context": "../..",
  "runArgs": [
    "--env", "ADMIN_PASSWORD=change-me",
    "--env", "BKG_WEB_PORT=43117",
    "--env", "BKG_API_PORT=43119",
    "--env", "BKG_PLUGIN_BUS_PORT=43121"
  ],
  "postCreateCommand": "cd /workspaces/bkg.rs/core/backend/gateway && npm install && npm run build",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "typescript.tsdk": "node_modules/typescript/lib"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
